<%= form_for(employee, html: { class: 'form-horizontal' }) do |f| %>
  <%= render 'shared/form_errors', errors: employee.errors %>
  <% if employee.errors.any? %>
    <div>
      <p><%= pluralize(employee.errors.count, 'error') %> prohibited this from being saved:</p>

      <ul>
      <% employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='form-group'>
    <%= f.label :first_name, class: 'control-label col-sm-2' %>
    <div class='col-sm-8'>
      <%= f.text_field :first_name, class: 'form-control', required: true do

      end %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :last_name, class: 'control-label col-sm-2' %>
    <div class='col-sm-8'>
      <%= f.text_field :last_name, class: 'form-control', required: true %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :email, class: 'control-label col-sm-2' %>
    <div class='col-sm-8'>
      <%= f.text_field :email, class: 'form-control', required: true %>
    </div>
  </div>


  <div class='form-group'>
    <%= f.label :born_date, class: 'control-label col-sm-2' %>
    <div class='col-sm-8'>
      <%= f.date_field :born_date, class: 'form-control' %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :gender, class: 'control-label col-sm-2' %>
    <div class='col-sm-8'>
      <%= f.text_field :gender, class: 'form-control' %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label :client_id, class: 'control-label col-sm-2' %>
    <div class='col-sm-8'>
      <%= f.select :client_id, options_from_collection_for_select(@clients, 'id', 'name'), class: 'form-control' %>
    </div>
  </div>

  <div class='actions col-sm-offset-2'>
    <%= f.submit 'Guardar', class: 'btn btn-default' %>
  </div>
<% end %>
